{% verbatim %}<script type="text/html"  id="ldap_tpl">
    {{#settings}}
    <tr class="commit">
        <td>
            <div class="branch-commit">
                <strong>
                    {{title}}:
                </strong>
            </div>
        </td>
        <td> {{text}} </td>
        <td><span style="font-size: 10px">{{description}}</span></td>
    </tr>
    {{/settings}}
</script>{% endverbatim %}
{% verbatim %}
<script type="text/html"  id="ldap_form_tpl">
    {{#settings}}
    <div class="form-group">
        <label class="control-label col-lg-4" for="date_format">{{title}}:</label>
        <div class="col-lg-5">
            <div class="form-group">
                {{#if_eq form_input_type 'text'}}
                    <input type="text" class="form-control" name="params[{{_key}}]" id="id_{{_key}}"  value="{{_value}}" />
                {{/if_eq}}
                {{#if_eq form_input_type 'select'}}
                    <div class="display-flex">
                    <select id="id_{{_key}}" name="params[{{_key}}]" title="{{title}}" class=" form-control selectpicker" >
                    {{#each form_optional_value }}
                       <option  value="{{@key}}"  {{#if_eq ../_value @key}}selected{{/if_eq}} >{{this}}</option>
                    {{/each}}
                    </select>
                    </div>
                {{/if_eq}}
                 {{#if_eq form_input_type 'radio'}}
                    {{#each form_optional_value }}
                        <label style=" font-weight: 200;  ">
                            <input type="radio" value="{{@index}}" {{#if_eq ../_value @key}}checked="checked"{{/if_eq}} name="params[{{../_key}}]" id="id_{{../_key}}">
                            {{this}}
                        </label>
                    {{/each}}
                {{/if_eq}}
                 {{#if_eq form_input_type 'checkbox'}}
                    {{#each form_optional_value }}
                        <label style=" font-weight: 200;  ">
                            <input type="checkbox" value="{{@index}}" {{#if_eq ../_value @key}}checked="checked"{{/if_eq}} name="params[{{../_key}}]" id="id_{{../_key}}">
                            {{this}}
                        </label>
                    {{/each}}
                {{/if_eq}}
            </div>
        </div>
    </div>
    {{/settings}}

</script>
{% endverbatim %}


